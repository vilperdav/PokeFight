        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307" />

    <TextView
        android:id="@+id/authorsLabel3"
        android:layout_width="378dp"
        android:layout_height="35dp"
        android:text="# Pablo Garcia Salgado"
